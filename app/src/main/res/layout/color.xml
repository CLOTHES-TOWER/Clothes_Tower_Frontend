<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9ecef">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="색상"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle"
                        app:backgroundTint="@android:color/holo_red_dark"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor1"
                        android:text="빨강"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle"
                        app:backgroundTint="@android:color/holo_orange_dark"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor2"
                        android:text="주황"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle"
                        android:backgroundTint="#ffd43b"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor3"
                        android:text="노랑"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle"
                        app:backgroundTint="#37b24d"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor4"
                        android:text="초록"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle"
                        app:backgroundTint="#228be6"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor5"
                        android:text="파랑"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle"
                        app:backgroundTint="#868e96"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor6"
                        android:text="그레이"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle"
                        app:backgroundTint="#000000"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor7"
                        android:text="검정"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle"
                        app:backgroundTint="#000000"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor8"
                        android:text="화이트"/>

                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>

    </RadioGroup>


</LinearLayout>